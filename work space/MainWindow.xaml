<Window
        Name="main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:work_space"
        xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="work_space.MainWindow"
        xmlns:Customcontrols="clr-namespace:work_space.Custom_controls"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        mc:Ignorable="d"
        Title="" Width="900" Height="690" MinWidth="400"
        WindowStartupLocation="CenterScreen" 
        Icon="pack://siteoforigin:,,,/Resources/WSico2.png" SizeChanged="Window_sizechange">
    <Window.Resources>
        <local:PercentageConverter x:Key="PercentageConverter"/>
        <local:MathConverter x:Key="MathConverter"/>
        <local:ColorToSolidBrushConverter x:Key="ColorToSolidBrushConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Height="60" Grid.Row="0" VerticalAlignment="Top" 
              Background="#FF9C27B0">
            <TextBlock Height="{Binding ActualWidth, ConverterParameter=1, Converter={StaticResource PercentageConverter}, ElementName=canvas}" Text="WORK SPACE" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" FontFamily="Champagne &amp; Limousines" FontWeight="Bold" />
            <Button Height="{Binding ActualWidth, ConverterParameter=1, Converter={StaticResource PercentageConverter}, ElementName=canvas}" HorizontalAlignment="Right" VerticalAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}">
                <materialDesign:PackIcon Kind="Power"/>
            </Button>
        </Grid>
        <Grid Grid.Row="1" Background="#DDE0E0E0" HorizontalAlignment="Stretch">
            <dragablz:TabablzControl HorizontalContentAlignment="Center" x:Name="MainTabControl">
                <dragablz:TabablzControl.InterTabController>
                    <dragablz:InterTabController/>
                </dragablz:TabablzControl.InterTabController>
                <TabItem>
                    <TabItem.Header>
                        <TextBlock FontWeight="Bold" Foreground="WhiteSmoke" Padding="20 0 20 0"><Run Text="HOME"/></TextBlock>
                    </TabItem.Header>
                    <Grid Margin="0 30 0 30">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <DockPanel Grid.Row="0" LastChildFill="False" HorizontalAlignment="Center" x:Name="Home_container">
                            <Grid DockPanel.Dock="Top" HorizontalAlignment="Center"
                                  Height="{Binding Path=ActualHeight, ElementName= Home_container, Converter={StaticResource MathConverter}, ConverterParameter=@VALUE*0.34}"
                                  MinHeight="120">
                                <Grid VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="60"></RowDefinition>
                                        <RowDefinition Height="60"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Column="0" Grid.RowSpan="2">
                                        <Image Source="pack://siteoforigin:,,,/Resources/WSico2.png" HorizontalAlignment="Right"></Image>
                                    </Grid>
                                    <Grid Grid.Row="0" Grid.Column="1" VerticalAlignment="Bottom">
                                        <TextBlock FontWeight="Bold" Padding="10" HorizontalAlignment="Left" FontSize="28" VerticalAlignment="Bottom" Foreground="#FF673AB7"><Run Text="WELCOME TO WORK SPACE"/></TextBlock>
                                    </Grid>
                                    <Grid Grid.Row="1" Grid.Column="1" VerticalAlignment="Top">
                                        <Button
                                            Style="{StaticResource MaterialDesignFlatButton}">
                                            <TextBlock Margin="-10 0 0 0" Foreground="CadetBlue" VerticalAlignment="Top">
                                                <Hyperlink TextDecorations="" NavigateUri="https://github.com/huynguyen1999kh/work-space" RequestNavigate="Hyperlink_RequestNavigate">
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="Magnify"></materialDesign:PackIcon>
                                                        <TextBlock>Explore</TextBlock>
                                                    </StackPanel>
                                                </Hyperlink>
                                            </TextBlock>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </Grid>
                            <StackPanel DockPanel.Dock="Top" VerticalAlignment="Top" HorizontalAlignment="Center" x:Name="panel_rating">
                                <TextBlock Foreground="#FF673AB7" HorizontalAlignment="Center">your rating</TextBlock>
                                <materialDesign:RatingBar VerticalAlignment="Top" HorizontalAlignment="Center"
                                          Value="0" x:Name="RatingBar2" ValueChanged="RateChange"
                                         />
                            </StackPanel>
                            <Grid DockPanel.Dock="Bottom" Height="auto" >
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="20">
                                    <Customcontrols:HomeCard x:Name="Home_cardSchedule"></Customcontrols:HomeCard>
                                    <Customcontrols:HomeCard x:Name="Home_cardTask"></Customcontrols:HomeCard>
                                    <Customcontrols:HomeCard x:Name="Home_cardDiary"></Customcontrols:HomeCard>
                                    <Customcontrols:HomeCard x:Name="Home_cardAccount"></Customcontrols:HomeCard>
                                </StackPanel>
                            </Grid>
                        </DockPanel>
                    </Grid>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <TextBlock FontWeight="Bold" Foreground="WhiteSmoke" Padding="20 0 20 0"><Run Text="SCHEDULE"/></TextBlock>
                    </TabItem.Header>
                    <Grid Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.15*"></ColumnDefinition>
                            <ColumnDefinition Width="0.85*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Viewbox Grid.Column="0" Height="2000" VerticalAlignment="Top">
                            <StackPanel>
                                <StackPanel Margin="5 0 0 15" Orientation="Horizontal" HorizontalAlignment="Left">
                                    <StackPanel x:Name="Schedule_stackpanelroutine" Orientation="Horizontal">
                                        <TextBlock
                                        Foreground="#FF673AB7"
                                        FontSize="13"
                                        Margin="0 0 10 0">2 weeks routine</TextBlock>
                                        <ToggleButton
                                        Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                        ToolTip="off/on" Click="SwitchRoutine" />
                                    </StackPanel>
                                    <Button x:Name="Schedule_buttonweek1" IsEnabled="False" Margin="0 0 3 0" Visibility="Collapsed" Click="SwitchRoutineButtonClick">WEEK 1</Button>
                                    <Button x:Name="Schedule_buttonweek2" Visibility="Collapsed" Click="SwitchRoutineButtonClick">WEEK 2</Button>
                                </StackPanel>
                                <Calendar x:Name="Schedule_Canlender"></Calendar>
                                <TextBlock Margin="0 30 0 10"
                                           FontSize="20"
                                           FontFamily="MV boli"
                                    HorizontalAlignment="Center" 
                                        Foreground="#FF673AB7"
                                        FontWeight="DemiBold">UP COMING EVENTS</TextBlock>
                                <materialDesign:DialogHost
                            DialogClosing="Diary_dialoghost_Closing"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                                    <Border
                                BorderThickness="1"
                                BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                                Width="{Binding ActualWidth, ElementName=Schedule_Canlender,Mode=OneWay}"
                                MinHeight="{Binding ActualHeight, ElementName=Schedule_Canlender,Mode=OneWay}"
                                ClipToBounds="True">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition
                                            Height="*" />
                                                <RowDefinition
                                            Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <ListBox
                                            x:Name="Schedule_eventlist" SelectionChanged="Schedule_EventSelected">
                                            </ListBox>
                                            <materialDesign:ColorZone
                                        Mode="PrimaryMid"
                                        Grid.Row="1"
                                        Effect="{DynamicResource MaterialDesignShadowDepth5}">
                                                <TextBlock
                                            Margin="16">
                                            Events
                                                </TextBlock>
                                            </materialDesign:ColorZone>
                                            <Button
                                        Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
                                        VerticalAlignment="Bottom"
                                        HorizontalAlignment="Right"
                                        Grid.Row="0"
                                        Margin="0 0 28 -20" Click="Schedule_newevent">
                                                <materialDesign:PackIcon
                                            Kind="Plus"
                                            Height="22"
                                            Width="22" />
                                            </Button>
                                        </Grid>
                                    </Border>
                                </materialDesign:DialogHost>
                            </StackPanel>
                        </Viewbox>
                        <ScrollViewer Grid.Column="1">
                            <Grid Margin="5 0 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.166*"></ColumnDefinition>
                                    <ColumnDefinition Width="0.166*"></ColumnDefinition>
                                    <ColumnDefinition Width="0.166*"></ColumnDefinition>
                                    <ColumnDefinition Width="0.166*"></ColumnDefinition>
                                    <ColumnDefinition Width="0.166*"></ColumnDefinition>
                                    <ColumnDefinition Width="0.166*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0 0 1 0">
                                    <DockPanel Background="#FFD1C4E9">
                                        <TextBlock Margin="0 5 0 5"
                                        HorizontalAlignment="Center"
                                        Foreground="#FF673AB7"
                                        FontWeight="DemiBold">MON</TextBlock>
                                    </DockPanel>
                                    <StackPanel x:Name="Schedule_stackpanel_2" Tag="2">
                                        
                                    </StackPanel>
                                    <Button
                                    Background="#FF7F4DD9"
                                    BorderBrush="#FF7F4DD9"
                                    Margin="5" Click="Schedule_newwork">
                                        <materialDesign:PackIcon Kind="Plus" Foreground="White"/>
                                    </Button>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="1 0 1 0">
                                    <DockPanel Background="#FFD1C4E9">
                                        <TextBlock
                                        Margin="0 5 0 5"
                                        HorizontalAlignment="Center" 
                                        Foreground="#FF673AB7"
                                        FontWeight="DemiBold">TUE</TextBlock>
                                    </DockPanel>
                                    <StackPanel  x:Name="Schedule_stackpanel_3" Tag="3">

                                    </StackPanel>
                                    <Button
                                    Background="#FF7F4DD9"
                                    BorderBrush="#FF7F4DD9"
                                    Margin="5" Click="Schedule_newwork">
                                        <materialDesign:PackIcon Kind="Plus" Foreground="White"/>
                                    </Button>
                                </StackPanel>
                                <StackPanel Grid.Column="2" Margin="1 0 1 0">
                                    <DockPanel Background="#FFD1C4E9">
                                        <TextBlock
                                        Margin="0 5 0 5"
                                        HorizontalAlignment="Center" 
                                        Foreground="#FF673AB7"
                                        FontWeight="DemiBold">WED</TextBlock>
                                    </DockPanel>
                                    <StackPanel x:Name="Schedule_stackpanel_4" Tag="4">

                                    </StackPanel>
                                    <Button
                                    Background="#FF7F4DD9"
                                    BorderBrush="#FF7F4DD9"
                                    Margin="5" Click="Schedule_newwork">
                                        <materialDesign:PackIcon Kind="Plus" Foreground="White"/>
                                    </Button>
                                </StackPanel >
                                <StackPanel Grid.Column="3" Margin="1 0 1 0">
                                    <DockPanel Background="#FFD1C4E9">
                                        <TextBlock Margin="0 5 0 5"
                                        HorizontalAlignment="Center" 
                                        Foreground="#FF673AB7"
                                        FontWeight="DemiBold">THU</TextBlock>
                                    </DockPanel>
                                    <StackPanel  x:Name="Schedule_stackpanel_5" Tag="5">

                                    </StackPanel>
                                    <Button
                                    Background="#FF7F4DD9"
                                    BorderBrush="#FF7F4DD9"
                                    Margin="5" Click="Schedule_newwork">
                                        <materialDesign:PackIcon Kind="Plus" Foreground="White"/>
                                    </Button>
                                </StackPanel>
                                <StackPanel Grid.Column="4" Margin="1 0 1 0">
                                    <DockPanel Background="#FFD1C4E9">
                                        <TextBlock Margin="0 5 0 5"
                                        HorizontalAlignment="Center" 
                                        Foreground="#FF673AB7"
                                        FontWeight="DemiBold">FRI</TextBlock>
                                    </DockPanel>
                                    <StackPanel x:Name="Schedule_stackpanel_6" Tag="6">

                                    </StackPanel>
                                    <Button
                                    Background="#FF7F4DD9"
                                    BorderBrush="#FF7F4DD9"
                                    Margin="5" Click="Schedule_newwork">
                                        <materialDesign:PackIcon Kind="Plus" Foreground="White"/>
                                    </Button>
                                </StackPanel>
                                <StackPanel Grid.Column="5" Margin="1 0 0 0">
                                    <DockPanel Background="#FFD1C4E9" >
                                        <TextBlock Margin="0 5 0 5"
                                        HorizontalAlignment="Center" 
                                        Foreground="#FF673AB7"
                                        FontWeight="DemiBold">SAT</TextBlock>
                                    </DockPanel>
                                    <StackPanel x:Name="Schedule_stackpanel_7" Tag="7">

                                    </StackPanel>
                                    <Button
                                    Background="#FF7F4DD9"
                                    BorderBrush="#FF7F4DD9"
                                    Margin="5" Click="Schedule_newwork">
                                        <materialDesign:PackIcon Kind="Plus" Foreground="White"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <TextBlock FontWeight="Bold" Foreground="WhiteSmoke" Padding="20 0 20 0"><Run Text="TASKS"/></TextBlock>
                    </TabItem.Header>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="0.86*"/>
                                <RowDefinition Height="0.14*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Background="MediumPurple" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition
                                            Width="Auto" />
                                    <ColumnDefinition
                                            Width="*" />
                                    <ColumnDefinition
                                            Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Button
                                        Style="{DynamicResource MaterialDesignToolButton}">
                                    <materialDesign:PackIcon
                                            Kind="PlusBoxOutline"
                                            Opacity="2"
                                            Margin="0 0 0 2"/>
                                </Button>
                                <TextBox
                                        Grid.Column="1"
                                        Margin="8 0 0 0"
                                        materialDesign:HintAssist.Hint="add a new task"
                                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                        BorderThickness="0"
                                        MinWidth="200"
                                        Width="600"
                                        Name="TextBoxTask"
                                        VerticalAlignment="Center" KeyDown="TextBoxTask_KeyDown" KeyUp="TextBoxTask_KeyUp" />
                                <Button x:Name="Task_ButtonClearText" Visibility="Hidden"
                                        Style="{DynamicResource MaterialDesignToolButton}"
                                        Grid.Column="2" Click="Task_ButtonClearText_click">
                                    <materialDesign:PackIcon
                                            Kind="Xamarin"
                                            Opacity=".56"
                                            Margin="8 0 0 0" />
                                </Button>
                            </Grid>
                            <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Orientation="Horizontal">
                                <TextBlock Margin="0 7 10 0" Foreground="DarkGray" DockPanel.Dock="Left"><Run Text="Sort by"/></TextBlock>
                                <ComboBox x:Name="Task_comboboxsort"
                                          SelectedValuePath="Content"
                                          DropDownClosed="Task_comboboxsort_SelectionChanged"
                                          Margin="10 0 10 0" Width="auto" IsEditable="True" AllowDrop="True" IsReadOnly="True" DockPanel.Dock="Left" >
                                    <ComboBoxItem IsSelected="True" Content="Priority"/>
                                    <ComboBoxItem Content="Deadline"/>
                                </ComboBox>
                                <ComboBox x:Name="Task_comboboxday" 
                                     SelectedValuePath="Content" Margin="10 0 10 0" Width="auto" IsEditable="True" IsReadOnly="True" DockPanel.Dock="Right" 
                                     DropDownClosed="Task_comboboxday_DropDownClosed"
                                     >
                                    <ComboBoxItem IsSelected="True" Content="Today"/>
                                    <ComboBoxItem Content="Tomorrow"/>
                                    <ComboBoxItem Content="This week"/>
                                    <ComboBoxItem Content="This month"/>
                                    <ComboBoxItem Content="Anytime"/>
                                </ComboBox>
                            </StackPanel>
                            <Grid Tag="Task tree view" Grid.Row="2">
                                <ListView
                                    ItemsSource="{Binding Task}"
                                    HorizontalAlignment="Center"
                                    x:Name="listviewtask" 
                                    ScrollViewer.CanContentScroll="True"
                                    AllowDrop="True" mah:ScrollViewerHelper.IsHorizontalScrollWheelEnabled="True" ClipToBounds="True" BorderThickness="0"
                                        >
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn
                                                Header="Priority"
                                                Width="80"
                                                ScrollViewer.CanContentScroll="True"
                                                >
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <ComboBox Width="65" Height="30"
                                                        IsEditable="True" IsReadOnly="True"
                                                        SelectedIndex="{Binding IDPriority}"
                                                        SelectionChanged="Task_comboboxpriority_SelectionChanged"
                                                        Tag="{Binding IDTask}"
                                                        >
                                                            <!--<ComboBoxItem>
                                                                <Rectangle Height="15" Width="15" Fill="Green"></Rectangle>
                                                            </ComboBoxItem>
                                                            <ComboBoxItem>
                                                                <Rectangle Height="15" Width="15" Fill="Yellow"></Rectangle>
                                                            </ComboBoxItem>
                                                            <ComboBoxItem>
                                                                <Rectangle Height="15" Width="15" Fill="red"></Rectangle>
                                                            </ComboBoxItem>-->
                                                            <ComboBoxItem Content="High"/>
                                                            <ComboBoxItem Content="Medium"/>
                                                            <ComboBoxItem Content="Low"/>
                                                        </ComboBox>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn                                               
                                                Header="Task" Width="340"
                                             >
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Content}"
                                                        TextWrapping="Wrap"/>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn
                                            Header="Deadline" Width="155">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Tag="{Binding IDTask}">
                                                        <DatePicker 
                                                              SelectedDateChanged="Task_calendardate_SelectionChange"
                                                              materialDesign:HintAssist.Hint="Date"
                                                              SelectedDate="{Binding Deadline, StringFormat='ddd d-M',Mode=OneWay}"
                                                              Width="80"
                                                              Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                                                            <TextBlock Text="  "></TextBlock>
                                                            <materialDesign:TimePicker
                                                              SelectedTimeChanged="Task_calendartime_SelectionChange"
                                                              SelectedTime="{Binding Deadline, StringFormat='h:mm',Mode=OneWay}"
                                                              Is24Hours="True"
                                                              materialDesign:HintAssist.Hint="Time"
                                                              Width="55"/> 
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn
                                                Header="Checked" Width="95">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <CheckBox Opacity=".65" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                            Content="x"
                                                            IsChecked="{Binding Checked}"
                                                            Style="{StaticResource MaterialDesignActionDarkCheckBox}"
                                                            Tag="{Binding IDTask}" Click="Task_checkboxchecked_Clicked"/>
                                                            <TextBlock Text="    "></TextBlock>
                                                            <Button Height="31" Width="31"
                                                            Tag="{Binding IDTask}"
                                                            Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                                            Click="Task_buttondelete_Clicked">
                                                                <materialDesign:PackIcon
                                                                Kind="TrashCanOutline"
                                                                Height="25"
                                                                Width="25" 
                                                                />
                                                            </Button>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>
                        </Grid>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <TextBlock FontWeight="Bold" Foreground="WhiteSmoke" Padding="20 0 20 0"><Run Text="DIARY"/></TextBlock>
                    </TabItem.Header>
                    <Grid Margin="10 10 20 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.2*"></ColumnDefinition>
                            <ColumnDefinition Width="0.8*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <Grid Background="MediumPurple">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition
                                                Width="Auto" />
                                        <ColumnDefinition
                                                Width="*" />
                                        <ColumnDefinition
                                                Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Button
                                            Style="{DynamicResource MaterialDesignToolButton}">
                                        <materialDesign:PackIcon
                                                Kind="PlusBoxOutline"
                                                Opacity="2"
                                                Margin="0 0 0 0"/>
                                    </Button>
                                    <TextBox
                                            Grid.Column="1"
                                            Margin="8 0 0 0"
                                            materialDesign:HintAssist.Hint="what on your mind?"
                                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                            BorderThickness="0"
                                            MinWidth="150"
                                            Width="600"
                                            x:Name="Story_textboxfastadd"
                                            KeyUp="Story_textboxfastadd_KeyUp"
                                            VerticalAlignment="Center" KeyDown="Story_textboxfastadd_KeyDown" />
                                    <Button Click="Diary_ButtonClearTextbox_Clicked"
                                            Visibility="Collapsed"
                                            x:Name="Diary_ButtonClearTextbox"
                                            Style="{DynamicResource MaterialDesignToolButton}"
                                            Grid.Column="2">
                                            <materialDesign:PackIcon
                                                Kind="CloseOctagonOutline"
                                                Opacity="2"
                                                Margin="0 0 0 0"/>
                                    </Button>
                                </Grid>
                            <Viewbox>
                                <Calendar
                                Width="auto" Height="auto"
                                x:Name="Diary_calendar"
                                SelectedDatesChanged="Diary_calendar_SelectedDatesChanged"
                                Margin="0 0 0 0" />
                            </Viewbox>
                            <Viewbox>
                            <materialDesign:DialogHost DialogClosing="Diary_dialoghost_Closing"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                                <materialDesign:DialogHost.DialogContent>
                                    <StackPanel
                                    Margin="6">
                                            <TextBlock Text=" Add a new story."/>
                                            <TextBox
                                        Margin="0 8 0 0"
                                        HorizontalAlignment="Stretch"
                                        x:Name="Story_textboxadd" />
                                        <StackPanel
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                            <Button
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            IsDefault="True"
                                            Margin="0 8 8 0"
                                            Command="materialDesign:DialogHost.CloseDialogCommand">
                                                <Button.CommandParameter>
                                                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                                        True
                                                    </system:Boolean>
                                                </Button.CommandParameter>
                                                ADD
                                            </Button>
                                            <Button
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            IsCancel="True"
                                            Margin="0 8 8 0"
                                            Command="materialDesign:DialogHost.CloseDialogCommand">
                                                <Button.CommandParameter>
                                                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                                        False
                                                    </system:Boolean>
                                                </Button.CommandParameter>
                                                CANCEL
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </materialDesign:DialogHost.DialogContent>
                                <Border
                                BorderThickness="1"
                                BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                                MinWidth="256"
                                MinHeight="256"
                                ClipToBounds="True">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition
                                            Height="*" />
                                            <RowDefinition
                                            Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <ListBox
                                        x:Name="Story_titlelistbox" SelectionChanged="Diary_titlelistbox_SelectionChanged">
                                        </ListBox>
                                        <materialDesign:ColorZone
                                        Mode="PrimaryMid"
                                        Grid.Row="1"
                                        Effect="{DynamicResource MaterialDesignShadowDepth5}">
                                            <TextBlock
                                            Margin="16">
                                            Stories
                                            </TextBlock>
                                        </materialDesign:ColorZone>
                                        <Button
                                        Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
                                        Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                                        VerticalAlignment="Bottom"
                                        HorizontalAlignment="Right"
                                        Grid.Row="0"
                                        Margin="0 0 28 -20">
                                            <materialDesign:PackIcon
                                            Kind="Plus"
                                            Height="22"
                                            Width="22" />
                                        </Button>
                                    </Grid>
                                </Border>
                            </materialDesign:DialogHost>
                            </Viewbox>
                        </StackPanel>
                        <Grid Grid.Column="1" Name="GridDiaryContent" VerticalAlignment="Stretch">
                            <StackPanel Orientation="Vertical">
                                <DockPanel Height="auto" LastChildFill="False">
                                    <Button Height="25" Width="auto"
                                    DockPanel.Dock="Left"
                                    Click="Story_buttonsave_Clicked"
                                    Margin="32,2,0,8"
                                    Style="{StaticResource MaterialDesignRaisedButton}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="ContentSave" Height="15" Width="15" Margin="-12 -2 0 0"/>
                                            <TextBlock Margin="0 -2 -10 0">save</TextBlock>
                                        </StackPanel>
                                    </Button>
                                    <ComboBox Name="Story_comboboxfontfamily"
                                    DockPanel.Dock="Left"
                                    Margin="20 -10 0 0" SelectedValuePath="FontFamily"
                                    materialDesign:HintAssist.Hint="Font" Width="70" Height="25" SelectionChanged="Story_comboboxfontfamily_SelectionChange">
                                        <ComboBoxItem FontFamily="Arial" Content="Arial"/>
                                        <ComboBoxItem FontFamily="MV Boli" Content="MV Boli"/>
